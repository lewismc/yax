#!/bin/bash

# default log directory & file
if [ "$YAX_LOG_DIR" = "" ]; then
  YAX_LOG_DIR="$YAX_HOME/logs"
fi
if [ "$YAX_LOGFILE" = "" ]; then
  YAX_LOGFILE='yax.log'
fi

CLASSPATH=
CLASSPATH=${CLASSPATH}:lib/de.opsdesign.yax.core.jar
CLASSPATH=${CLASSPATH}:lib/xml-resolver-1.2.jar
CLASSPATH=${CLASSPATH}:configuration
CLASSPATH=${CLASSPATH}:.
CLASSPATH=${CLASSPATH}:lib/apache-log4j-1.2.16/log4j-1.2.16.jar
CLASSPATH=${CLASSPATH}:lib/xalan-j/serializer.jar
CLASSPATH=${CLASSPATH}:lib/xalan-j/xalan.jar
CLASSPATH=${CLASSPATH}:lib/xalan-j/xercesimpl.jar
CLASSPATH=${CLASSPATH}:lib/xalan-j/xml-apis.jar
CLASSPATH=${CLASSPATH}:lib/xalan-j/xsltc.jar

script=examples/example1.1.xproc
in=examples/example1.1.xml
out=test/example1.1.output.cmd.xml

java -classpath ${CLASSPATH} de.opsdesign.yax.Yax ${script} ${in} ${out}
